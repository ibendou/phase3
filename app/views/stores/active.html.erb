<p id="notice"><%= notice %></p>

<h2>List Active Stores</h2>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store, :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Edit', edit_store_path(store) , :class=> "teal-text text-lighten-1"%></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "teal-text text-lighten-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col">
    <%= link_to 'New Store', new_store_path, :class=> "btn waves-effect waves-teal" %>
</div>

<div class="row"></div>
